{ 
    "include": [
      "src",
    ],
    "compilerOptions": {
        "module": "ES6",
        "outDir": "./dist/",
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es2017",
        "inlineSources": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "removeComments": true,
        "moduleResolution": "node",
        "plugins": [
          {
            "name": "tslint-language-service"
          }
        ]
    }
}