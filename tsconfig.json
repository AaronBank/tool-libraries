{
  "include": ["src"],
  "compilerOptions": {
    "module": "es6",
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es2017",
    "inlineSources": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "removeComments": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "lib": [
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "es2018",
      "es2018.promise",
      "dom",
      "dom.iterable",
      "scripthost",
      "esnext"
    ]
  }
}
